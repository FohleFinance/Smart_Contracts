    function setBooster(address _booster) external override {
        require(msg.sender == IFOHLE_Factory(factory).setter(), 'FOHLE: FORBIDDEN');
        booster = _booster;
    }

    function startBoost(
        address addressLP, // del front end (igual que la resta de adresses) comprobar q si es aixi uniswap
        address tokenA,
        address tokenB,
        uint256 amountLP, // ensure amb el front end que es menys que els slots
        uint deadline
    ) external virtual ensure(deadline) override returns (uint256 timeLock) {
        if (booster != address(0)) { //Minimum hold request for boost
            require(IERC20(booster).balanceOf(msg.sender) > 10, "FOHLE: INSUFFICIENT_BOOSTER_HOLD");
        }
        require(amountLP > 0, "FOHLE: INSUFFICIENT_LP");
        address pair = FOHLE_Library.pairFor(factory, tokenA, tokenB);
        TransferHelper.safeTransferFrom(addressLP, msg.sender, pair, amountLP);
        timeLock = IFOHLE_Pair(pair).liquidityLock(msg.sender, amountLP);
    }

    // **** LIBRARY FUNCTIONS ****
    function quote(uint amountA, uint reserveA, uint reserveB) public pure virtual override returns (uint amountB) {
        return FOHLE_Library.quote(amountA, reserveA, reserveB);
    }

    function getAmountOut(uint amountIn, uint reserveIn, uint reserveOut)
        public
        pure
        virtual
        override
        returns (uint amountOut)
    {
        return FOHLE_Library.getAmountOut(amountIn, reserveIn, reserveOut);
    }

    function getAmountIn(uint amountOut, uint reserveIn, uint reserveOut)
        public
        pure
        virtual
        override
        returns (uint amountIn)
    {
        return FOHLE_Library.getAmountIn(amountOut, reserveIn, reserveOut);
    }

    function getAmountsOut(uint amountIn, address[] memory path)
        public
        view
        virtual
        override
        returns (uint[] memory amounts)
    {
        return FOHLE_Library.getAmountsOut(factory, amountIn, path);
    }

    function getAmountsIn(uint amountOut, address[] memory path)
        public
        view
        virtual
        override
        returns (uint[] memory amounts)
    {
        return FOHLE_Library.getAmountsIn(factory, amountOut, path);
    }
